@model IEnumerable<ymanasayfa.Models.Mesaj>


<table class="table" width="940">
    <tr>
        <th align="center" style="background-color:#15566b">
            <h4 style="color:white;">Gönderilen</h4>
        </th>

        <th align="center" style="background-color:#15566b">
            <h4 style="color:white;">Gönderen</h4>
        </th>

        <th align="center" style="background-color:#15566b" colspan="3">
            <h4 style="color:white; margin-left:4px;">Mesaj İçeriği</h4>
        </th>
     
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="150px" style="background-color:lightsteelblue">

                @Html.DisplayFor(modelItem => item.Kullanıcı.isim)

            </td>

            <td width="150px" style="background-color:lightsteelblue">

                @Html.DisplayFor(modelItem => item.Kullanıcı1.isim)

            </td>

            <td width="640" style="padding-left:5px; background-color:lightsteelblue">
                @Html.DisplayFor(modelItem => item.mesaj_icerik)
            </td>

        </tr>
    }

</table>
