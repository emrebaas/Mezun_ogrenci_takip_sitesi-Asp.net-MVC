@model ymanasayfa.Models.Kullanıcı

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div>
    
    <table align="center" width="500" style="margin-top:50px;">

        <tr>
            <td width="100">

                @if (Model.resim == null || Model.resim == "NULL" || Model.resim == "")
                {
                    <a href="/Anasayfa/Profil/@Model.id">
                        <img width="100" height="100" src="~/Content/img/memlog.png" />
                    </a>
                }
                else
                {       <a href="/Anasayfa/Profil/@Model.id">
                        <img width="100" height="100" src="~/Content/img/@Model.resim" />
                    </a>
                }



            </td>



            <td style="padding-left:30px;">
                <h3 style="color:darkcyan">@Html.DisplayFor(Model => Model.isim)</h3>
            </td>

            <td>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Geri Dön", "Index")
                    </div>
                }

            </td>
        </tr>
        <tr>
            <td style="padding-bottom:20px;" colspan="3">

                <img width="500" src="~/Content/img/cizgi.png" />
            </td>
        </tr>
       

    </table>


</div>
