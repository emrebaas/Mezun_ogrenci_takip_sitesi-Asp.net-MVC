@model IEnumerable<ymanasayfa.Models.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<table class="table">
    <tr>
        <th>
            <h3>Duru Başlığı</h3>
        </th>
        <th>
           <h3>Yorum Sahibi</h3>
        </th>
        <th>
            <h3>Yorum</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Duyuru.duyuruisim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kullanıcı.kadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yorum_aciklama)
        </td>
    </tr>
}

</table>
