@model ymanasayfa.Models.Hakkinda

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/LayoutProfil.cshtml";
}



<div id="profilresim">
    <table  border="0">
        <tr>
            <td align="center">




                @if (Model.Kullanıcı.resim == null || Model.Kullanıcı.resim == "NULL" || Model.Kullanıcı.resim == "")
                {
                        <img width="150" height="200" src="~/Content/img/memlog.png" />   
                }
                else
                {   
                        <img width="150" height="200" src="~/Content/img/@Model.Kullanıcı.resim" />
                }



                
            </td>
           </tr>
        <tr>
            <td style="font:bold; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;" align="center">
                 @Model.Kullanıcı.isim
            </td>
        </tr>
       
    </table>
</div>

<div id="profilhakkinda">
   
    <table>
        <tr><td>Öğrenim Durumu :</td>
            <td>
                @Html.DisplayFor(model => model.mezundurum.durum)
            </td>
        </tr>

        <tr><td>Giriş Yılı :</td>
            <td>@Html.DisplayFor(model => model.GirisTarih.mezuntarih)</td>
        </tr>

        <tr><td>Yaş :</td>
            <td>@Html.DisplayFor(model => model.yas)</td>
        </tr>

        <tr><td rowspan="2">İletişim Bilgileri :</td>
            <td>@Html.DisplayFor(model => model.email)</td>
        </tr>

        <tr>
            <td>@Html.DisplayFor(model => model.telefon)</td>
        </tr>

        <tr><td>Bulunduğu Yer :</td>
            <td>@Html.DisplayFor(model => model.yer)</td>
        </tr>
        <tr><td>Çalıştığı Yer :</td>
            <td>@Html.DisplayFor(model => model.isyer)</td>
        </tr>
        <tr><td>Biyografi :</td>
            <td>@Html.DisplayFor(model => model.bio)</td>
        </tr>

    </table>
    
    
   
</div>


            

<div id="ortaprofilmenu" style="padding-left:40px; width:920px;" >
   
@if (Session["kullanicidi"].ToString() != Model.Kullanıcı.id.ToString())
{

    <ul>
        <li><a class="glidebutton" href="~/Anasayfa/Mesaj"><span data-text="Mesaj Gönder">Mesaj Gönder</span></a></li>
    </ul>
}
else
{
    <ul>

        <li><a class="glidebutton" href="~/Anasayfa/gelenmesaj/@Convert.ToInt32(Session["kullanicidi"])"><span data-text="Gelen Mesaj">Gelen Mesaj</span></a></li>
        <li><a class="glidebutton" href="~/Anasayfa/gidenmesaj/@Convert.ToInt32(Session["kullanicidi"])"><span data-text="Gönderilen Mesaj">Gönderilen Mesaj</span></a></li>
        <li><a class="glidebutton" href="~/Anasayfa/AyarlarKul/@Convert.ToInt32(Session["kullanicidi"])"><span data-text="Hesap Ayarları">Hesap Ayarları</span></a></li>
        <li><a class="glidebutton" href="~/Anasayfa/AyarlarHak/@Convert.ToInt32(Session["kullanicidi"])"><span data-text="Profil Ayarları">Profil Ayarları</span></a></li>


    </ul>
}
</div>









